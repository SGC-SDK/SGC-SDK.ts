{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "types": ["node"],
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  }
}
